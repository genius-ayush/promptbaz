generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id             String    @id @default(cuid())
  title          String
  promptText     String     @map("prompt")
  sampleImageUrl String
  modelUsed      String
  steps          Json       // holds ordered instructions
  aspectRatio    String?    // e.g. "3:4"
  seed           Int?
  categories     Category[] // many-to-many
  tags           Tag[]      // many-to-many
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  prompts   Prompt[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  prompts   Prompt[]
}

model Admin {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String
  password String
  
  createdAt DateTime @default(now())
}
